{
  "name": "regret-minimizer",
  "version": "1.0.0",
  "description": "Track tokens you viewed but didn't buy - learn from your missed opportunities",
  "author": "Felipe",
  "main": "app/main.js",
  "scripts": {
    "start": "node app/server/index.js",
    "start:electron": "electron .",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "server": "node app/server/index.js",
    "frontend": "cd app/frontend && npm run dev",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd app/frontend && npm run build",
    "build:web": "cd app/frontend && npm install && npm run build",
    "install:all": "npm install && cd app/frontend && npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "node-fetch": "^2.7.0",
    "pg": "^8.17.2",
    "sql.js": "^1.10.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.regretminimizer.app",
    "productName": "Regret Minimizer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "app/frontend/public/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "extension",
        "to": "extension"
      }
    ]
  }
}
